<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="10" minWidth="10" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TO.project.CinemaStreet.controller.MovieController">
    <!--           search bar-->
    <top>
        <HBox>
            <HBox fx:id="movieHBox" >
                <TextField fx:id="searchTextField" promptText="Szukaj po tytule" prefWidth="300"/>
                <ComboBox fx:id="searchByCategoryComboBox" prefWidth="200.0" promptText="Wyszukaj po kategorii"></ComboBox>
                <Button onAction="#addNewMovieAction" text="Dodaj nowy film" prefWidth="100.0"/>
            </HBox>
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin>
        </HBox>
    </top>
<!--    FlowPane of movieCards-->
    <center>
        <FlowPane fx:id="movieFlowPane" prefHeight="400.0" prefWidth="600.0" />
    </center>


    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</BorderPane>
