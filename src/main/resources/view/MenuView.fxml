<!--            fx:controller="TO.project.CinemaStreet.controller.UserController"-->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="TO.project.CinemaStreet.controller.MenuController"
            minHeight="10" minWidth="10"
            styleClass="linear-grad-to-bottom-right"
>


    <!--    buttons opening each application component-->
    <center>
        <VBox>
            <Label text="Witaj w CinemaStreet!" prefWidth="300"/>
            <Label text="------------------------" prefWidth="300"/>
            <Label text="Jesteś zalogowany jako:" prefWidth="300"/>
            <Label fx:id="userInfo" text=""/>
            <Label text="------------------------" prefWidth="300"/>
            <Button text="Konfiguracja użytkowników" onAction="#openUsers" prefWidth="300"/>
            <Button text="Sprzedaj bilety" onAction="#sellTickets" prefWidth="300"/>
            <Button text="Filmy" onAction="#openMovies" prefWidth="300"/>
            <Button text="Konfiguracja filmów" onAction="#openEditMovies" prefWidth="300"/>
            <Button text="Zarzadzanie seansami" onAction="#openHallMovies" prefWidth="300"/>
            <Button text="Rekomendowane filmy" onAction="#openRecommendedMovies" prefWidth="300"/>
            <Button text="Zaktualizuj sale" onAction="#updateHalls" prefWidth="300"/>
            <Button text="Statystyki" onAction="#openStats" prefWidth="300"/>
            <Button  fx:id="signOutButton"  text="Wyloguj" onAction="#signOut" prefWidth="300"/>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</BorderPane>
